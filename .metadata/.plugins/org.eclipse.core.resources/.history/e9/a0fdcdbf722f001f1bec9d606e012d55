package teste_programacao;

import java.time.LocalDate;
import java.time.format.DateTimeFormatter;

public class Pessoa {
    
    private String nome;
    private LocalDate dataNascimento;

    // Construtor sem par창metros
    public Pessoa() {
        // Inicializa os atributos com valores padr찾o
        this.nome = "";
        this.dataNascimento = LocalDate.now(); // Pode inicializar com a data atual ou outra data padr찾o
    }

    // Construtor com par창metros
    public Pessoa(String nome, LocalDate dataNascimento) {
        this.nome = nome;
        this.dataNascimento = dataNascimento;
    }

    public String getNome() {
        return nome;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    public LocalDate getDataNascimento() {
        return dataNascimento;
    }

    public void setDataNascimento(LocalDate dataNascimento) {
        this.dataNascimento = dataNascimento;
    }

    public String formatDate() {
        return dataNascimento.format(DateTimeFormatter.ofPattern("dd/MM/yyyy"));
    }
}
